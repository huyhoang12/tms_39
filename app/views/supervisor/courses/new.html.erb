<% provide(:title, 'Add new course') %>
<h1><%= t "addCourse" %></h1>
<div class="row">
  <%= form_for [:supervisor, @course] do |f| %>
    <div class="col-md-12">
      <%= render "layouts/messages", object: f.object %>
    </div>
    <div class="col-md-4">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-md-4">
    <div class="panel panel-default scroll">
    <div class="panel-heading"><%= t "chooseSubjectForCourse" %></div>
      <div class="panel-body">
        <table>
            <%= f.fields_for :course_subjects, @course.course_subjects do |builder| %>
            <%= render "supervisor/courses/layouts/subjects", f: builder %>
          <% end %>
        </table>
      </div>
    </div>
    </div>
    <div class="col-md-6 col-md-offset-3">
      <%= f.submit "Create couser", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
